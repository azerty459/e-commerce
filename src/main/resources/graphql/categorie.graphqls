type Categorie {
    id: Int!
    nom: String!
    sousCategories: [Categorie]!
    level: Int!
    chemin: String!
}

type Query {
    categories(id: Int, nom: String): [Categorie]!
}

type Mutation {
    addCategorieParent(nom: String!): Categorie!
    addCategorieEnfant(nom: String!, pere: Int): Categorie!
    deleteCategorie(id: Int!): Boolean!
}
