input RoleAddInput {
    id: Int!
}

input RoleUpdateInput {
    id: Int!
}

type Role {
    id: Int!
    nom: String!
}


extend type Query {
    roles(id: Int, nom: String): [Role]!
}

extend type Mutation {
    addRole(role: RoleAddInput!): Role!
    updateRole(role: RoleUpdateInput!): Role!
    deleteRole(id: Int!): Boolean!
}
