input CaracteristiqueInput {
    id: Int
    label: String!
}

type Caracteristique {
    id: Int!
    label: String!
}

extend type Mutation {
    addCaracteristique(caracteristique: CaracteristiqueInput!): Caracteristique!
    deleteCaracteristique(id: Int!): Boolean!
}

extend type Query {
    caracteristiques(id: Int, nom: String): [Caracteristique]!
}
