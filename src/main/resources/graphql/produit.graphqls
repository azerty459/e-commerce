type Produit {
    ref: String!
    nom: String!
    description: String!
    prixHT: Float!
    categories: [Categorie]!
}

extend type Query {
    produits(ref: String, cat: String): [Produit]!
}

extend type Mutation {
    addProduit(ref: String!, nom: String!, description: String!, prixHT: Float!): Produit!
    updateProduit(ref: String!, nom: String!, description: String!, prixHT: Float!): Produit!
    deleteProduit(ref: String!): Boolean!
}