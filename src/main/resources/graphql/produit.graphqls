input ProduitInput {
    ref: String!
    nom: String!
    description: String
    prixHT: Float!
    categories: [CategorieInput]
    caracteristiquesAssociated: [CaracteristiqueAssociatedInput]
    photoPrincipale: PhotoInput
}

input CaracteristiqueAssociatedInput {
    caracteristique: CaracteristiqueInput!
    value: String!
}

type CaracteristiqueAssociated {
    caracteristique: Caracteristique!
    value: String!
}

type Produit {
    ref: String!
    nom: String!
    description: String!
    prixHT: Float!
    categories: [Categorie]!
    caracteristiquesAssociated: [CaracteristiqueAssociated]!
    photos: [Photo]!
    photoPrincipale: Photo
}

extend type Query {
    produits(ref: String, nom: String, cat: String): [Produit]!
}

extend type Mutation {
    addProduit(ref: String!, nom: String!, description: String, prixHT: Float!, nouvelleCat: [Int]): Produit!
    updateProduit(produit: ProduitInput!): Produit!
    deleteProduit(ref: String!): Boolean!
}